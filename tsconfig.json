{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "Node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "checkJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "jsxFragmentFactory": "h.fragment",
    "skipLibCheck": true,
    "types": [
      "@violentmonkey/types",
      "@types/chrome"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/meta*"
  ]
}
